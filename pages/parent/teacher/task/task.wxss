.class-body {
  height: 450rpx;
  margin-top: 10rpx;
  text-align: center;
  align-items:center;
  font-size: 30rpx;
}
.class-input {
  width: 70%;
  padding-left: 15%;
  height: 100%;
}

.class-text {
  width: 100%;
  height: 75rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  text-align: left;
  margin-bottom: 10rpx;
}

.class-icon {
  position: absolute;
  width: 45rpx;
  height: 30rpx;
  left: 10rpx;
  top:30rpx;
}

.class-text input {
  width: 400rpx;
  position: absolute;
  left: 80rpx;
  font-size: 20rpx;
  height: 50rpx;
  top: 10px;
}
.class-p-class{
  font-size: 20rpx;
  color: #cccccc;
}

.class-btn{
  height: 65rpx;
  border-radius: 10rpx;
  background-color: #1ABC9C;
  line-height: 65rpx;
  color: #ffffff;
  margin-top: 25rpx;
  font-size: 25rpx;
}
.class-switch{
  font-size: 12rpx;
  float: right;
  margin-top: 10rpx;
  color: #888888;
}