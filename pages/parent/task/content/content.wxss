.taskBody {
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
  position: absolute;
  justify-content: inherit;
}

.tabs-swiper {
  height: 350rpx;
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.task-body {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  min-height: 100rpx;
  background-color: #fff;
}

.task-date {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  border-bottom: 1px solid #e6e6e6;
}

.task-list {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.task-list view {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
}

.task-btn {
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #17c6ee;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.task-btnBody {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  margin-top: 60rpx;
}
.task-btn-complete {
background-color: #1abc9c!important;
}