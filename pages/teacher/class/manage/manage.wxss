.pageBody {
  background-color: #f2f2f2;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  flex-direction: column;
  justify-content: initial;
}

.class-className, .class-member-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #f2f2f2;
}

.class-portrait {
  height: 120rpx;
  width: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.class-portrait image {
  height: 80rpx;
  width: 80rpx;
}

.class-name {
  flex: 1;
  line-height: 120rpx;
}

.class-ret {
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  width: 15rpx;
  height: 30rpx;
}

.class-member-body {
  width: 100%;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.del {
  width: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(220rpx);
  transform: translateX(220rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  height: 120rpx;
  background-color: #ffffff;
}

.del image {
  height: 80rpx;
  width: 80rpx;
}
.del image:last-child {
  margin-left: 20rpx;
}
.touch-move-active .class-member-item, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.class-member-list {
  flex: 1;
  width: 100%;
  margin-top: 30rpx;
}

.class-member-head {
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-weight: bold;
  line-height: 80rpx;
  width: 100%;
  background-color: #fff;
}

.class-phoneNum {
  width: 270rpx;
  line-height: 120rpx;
}

.class-state {
  position: absolute;
  top: 45rpx;
  left: 20rpx;
  height: 30rpx;
  width: 5rpx;
  background-color: #17c6ee;
}

.class-member-item .class-portrait {
  margin-left: 20rpx;
}

.class-member-item {
  position: relative;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(220rpx);
  transform: translateX(220rpx);
  margin-left: -220rpx;
}

.no-student{
  display: block;
  width: 100%;
  align-items: center;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: none;
  text-align: center;
}

.add-student {
  height: 80rpx;
  background-color: #0099FF;
  line-height: 80rpx;
  color: #fff;
  margin-top: 20rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}