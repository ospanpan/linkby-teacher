.rt-body {
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
  display: flex;
  position: absolute;
  flex-direction: column;
}

.releasetask-txt {
  border-top: 1rpx solid #ddd;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.releasetask-txt textarea {
  width: 100%;
  height: 240rpx;
}

.releasetask-body {
  flex: 1;
  padding: 60rpx 30rpx 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.releasetask-txt .releasetask-update {
  padding-top: 30rpx;
  height: 170rpx;
}

.releasetask-updateAdd {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #ddd;
  text-align: center;
  line-height: 90rpx;
  font-size: 180rpx;
}

.releasetask-btn{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #17c6ee;
  color: #ffffff;
  text-align: center;
  border-radius: 15rpx;
  font-size: 30rpx;
}

.weui-textarea-counter{
  padding-bottom: 30rpx;
}

.page__bd {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.page__bd_spacing{
  background-color: transparent;
  
}
.page__bd_spacing .weui-btn{
background-color: #17c6ee;
}